<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="AppTheme.CropActivity" parent="Theme.MaterialComponents.Light">
        
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/color_black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/app_bg_color</item>
        <item name="android:statusBarColor">@color/app_color_status_bar</item>
        <item name="colorControlActivated">@color/app_bg_dark_color</item>
        <item name="android:windowLightStatusBar" ns1:targetApi="m">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>
    <style name="AppTheme.IntroTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/color_black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/app_bg_color</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlActivated">@color/app_bg_dark_color</item>
        <item name="android:windowLightStatusBar" ns1:targetApi="m">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>
    <style name="AppTheme.SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/color_black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/app_bg_color</item>
        <item name="android:statusBarColor">@color/app_color_status_bar</item>
        <item name="colorControlActivated">@color/app_bg_dark_color</item>
        <item name="android:windowLightStatusBar" ns1:targetApi="m">false</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>
    <style name="AppTheme.basic_android_setup" parent="Theme.MaterialComponents.Light.NoActionBar">
        
        <item name="colorPrimary">@color/app_color</item>
        <item name="colorPrimaryDark">@color/app_color</item>
        <item name="colorAccent">@color/color_black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/app_bg_color</item>
        <item name="android:statusBarColor">@color/app_color_status_bar</item>
        <item name="colorControlActivated">@color/app_bg_dark_color</item>
        <item name="android:windowLightStatusBar" ns1:targetApi="m">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>
</resources>